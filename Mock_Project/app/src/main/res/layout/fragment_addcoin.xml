<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#048AF4">
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"

                android:src="@drawable/button_back_foreground" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Mua Coin"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="50dp"
                app:srcCompat="@android:drawable/ic_menu_info_details"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"/>
        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="0dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/txtViewTongCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
            android:gravity="center"
            android:text="Tổng số Coin trong tài khoản"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtViewCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="300 Coin"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
             />
        <LinearLayout
            android:id="@+id/lineaNapCoin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="200"
                android:textColor="@android:color/black"

                android:gravity="center"
                />
            <TextView
                android:layout_marginLeft="200dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Coin"
               android:gravity="center"
                android:textStyle="bold"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearMenhgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+50 Coin"
                android:textColor="#FBFBFB"
                android:gravity="center"
                android:background="@drawable/rounded_corners_value"
                >

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+100 Coin"
                android:textColor="#FBFBFB"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:background="@drawable/rounded_corners_value">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+150 Coin"
                android:textColor="#FBFBFB"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:background="@drawable/rounded_corners_value">

            </TextView>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+200 Coin"
                android:textColor="#FBFBFB"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:background="@drawable/rounded_corners_value">
        </TextView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/imageViewCreditCard"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                   android:layout_gravity="center"
                    app:srcCompat="@drawable/credit_card" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="1.000 tương ứng với 1 Coin VTI "
                    android:textColor="#ffffff"

                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint1"
            android:gravity="center"
        android:background="#FBF8F8">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/mua_coin"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Thông tin thanh toán"
                    android:textColor="#233CC8"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tiền cần thanh toán là" />


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="200.000d"
                        android:textColor="#070707"
                        android:textStyle="bold" />
                </LinearLayout>


            </RelativeLayout>


            <TextView

                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="90dp"
                android:text="Các phương thức thanh toán"
                android:textColor="#092CEF"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <LinearLayout

                android:id="@+id/linearOfficer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@id/textView4">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    android:text="Thanh toán tại văn phòng" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                app:layout_constraintStart_toStartOf="@+id/linearOfficer"
                app:layout_constraintTop_toBottomOf="@+id/linearOfficer">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Thanh toán qua chuyển khoàn"
                    tools:layout_editor_absoluteX="56dp"
                    tools:layout_editor_absoluteY="198dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp" />
            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:layout_marginTop="220dp"
                android:background="#2B48EA"
                android:text="Xác nhận"
                android:textColor="#ffffff" />

        </RelativeLayout>
</LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>